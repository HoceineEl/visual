{
  "name": "Announcement Bar",
  "description": "",
  "settings": [
    {
      "id": "content",
      "type": "inline_richtext",
      "label": "Content [rich]"
    },
    {
      "id": "button_link",
      "type": "link",
      "label": "Announcement link"
    },
    {
      "id": "page",
      "type": "cms_page",
      "label": "Cms Page"
    },
    {
      "id": "product",
      "type": "product",
      "label": "Product"
    },
    {
      "id": "category",
      "type": "category",
      "label": "Category"
    },
    {
      "id": "color",
      "type": "color",
      "label": "Text Color",
      "default": "black"
    },
    {
      "id": "image",
      "type": "image",
      "label": "Image"
    },
    {
      "id": "show_announcement",
      "type": "checkbox",
      "label": "Show announcement",
      "info": "Show announcement bar when enabled"
    },
    {
      "id": "announcement",
      "type": "text",
      "label": "Announcement text"
    },
    {
      "id": "count",
      "type": "number",
      "label": "Announcement count",
      "default": 1,
      "min": 1,
      "max": 3
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "middle"
    },
    {
      "type": "header",
      "label": "Test Group"
    },
    {
      "type": "radio",
      "id": "logo_aligment",
      "label": "Logo alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "centered",
          "label": "Centered"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "id": "position",
      "type": "select",
      "label": "Announcement position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "home_welcome_message",
      "label": "Welcome message",
      "default": "Welcome to my shop!"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Announcement text here",
          "label": "Announcement text"
        },
        {
          "type": "text",
          "id": "link",
          "label": "Url"
        }
      ]
    }
  ]
