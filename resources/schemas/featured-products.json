{
  "$schema": "https://github.com/BagistoPlus/visual/blob/main/resources/schemas/section.schema.json",
  "name": "visual::sections.featured-products.name",
  "description": "visual::sections.featured-products.description",
  "max_blocks": 4,
  "settings": [
    {
      "id": "heading",
      "type": "text",
      "label": "visual::sections.featured-products.settings.heading_label",
      "default": "visual::sections.featured-products.settings.heading_default"
    },
    {
      "id": "subheading",
      "type": "text",
      "label": "visual::sections.featured-products.settings.subheading_label",
      "default": "visual::sections.featured-products.settings.subheading_default"
    },
    {
      "id": "nb_products",
      "type": "range",
      "label": "visual::sections.featured-products.settings.nb_products_label",
      "default": 4,
      "min": 1,
      "max": 4,
      "step": 1,
      "info": "visual::sections.featured-products.settings.nb_products_info"
    },
    {
      "id": "product_type",
      "type": "select",
      "label": "visual::sections.featured-products.settings.product_type_label",
      "default": "new",
      "options": [
        {
          "label": "New",
          "value": "new"
        },
        {
          "label": "Featured",
          "value": "featured"
        }
      ],
      "info": "visual::sections.featured-products.settings.product_type_info"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "visual::sections.featured-products.blocks.product.name",
      "limit": 4,
      "settings": [
        {
          "id": "product",
          "type": "product",
          "label": "visual::sections.featured-products.blocks.product.settings.product_label",
          "info": "visual::sections.featured-products.blocks.product.settings.product_info"
        }
      ]
    }
  ]
}
