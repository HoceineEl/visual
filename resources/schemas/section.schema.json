{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/BagistoPlus/visual/blob/main/resources/schemas/section.schema.json",
  "title": "Section",
  "description": "A theme section",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The section name"
    },
    "description": {
      "type": "string",
      "description": "The section description"
    },
    "wrapper": {
      "type": "string",
      "description": "emmet like string representing the wrapper tag of the section"
    },
    "settings": {
      "type": "array",
      "items": {
        "$ref": "file://definitions.schema.json#/setting"
      }
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "The block type, used to show the right component in the section template"
          },
          "name": {
            "type": "string",
            "description": "The block name, shown in the theme editor"
          },
          "limit": {
            "type": "integer",
            "description": "The number of blocks of this type that can be used."
          },
          "settings": {
            "type": "array",
            "items": {
              "$ref": "file://definitions.schema.json#/setting"
            }
          }
        },
        "required": [
          "type",
          "name"
        ]
      }
    },
    "max_blocks": {
      "type": "integer",
      "description": "The maximum number of blocks that can be add to the section"
    },
    "default": {
      "$ref": "file://definitions.schema.json#/sectionData"
    }
  },
  "required": [
    "name"
  ]
}
