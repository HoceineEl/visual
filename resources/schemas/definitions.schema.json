{
  "setting": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The setting id, used to access the setting value"
      },
      "type": {
        "enum": [
          "header",
          "text",
          "textarea",
          "checkbox",
          "number",
          "radio",
          "range",
          "select",
          "color",
          "image",
          "category",
          "product",
          "link",
          "cms_page",
          "richtext",
          "inline_richtext"
        ],
        "description": "The type of the setting"
      },
      "label": {
        "type": "string",
        "description": "The setting label"
      },
      "default": {
        "description": "The setting default value"
      },
      "info": {
        "type": "string",
        "description": "Helper text about the setting"
      },
      "placeholder": {
        "type": "string",
        "description": "Placeholder for input setting type"
      },
      "min": {
        "type": "integer",
        "description": "The minimum value of the input"
      },
      "max": {
        "type": "integer",
        "description": "The maximum value of the input"
      },
      "step": {
        "type": "integer",
        "description": "The step value of the range input. Default to 1"
      },
      "unit": {
        "type": "string",
        "description": "The unit for the input. Shown in the theme editor next to the input value"
      },
      "options": {
        "type": "array",
        "items": {
          "$ref": "#/choice_option"
        }
      }
    },
    "required": [
      "type",
      "label"
    ],
    "allOf": [
      {
        "if": {
          "properties": {
            "type": {
              "not": {
                "const": "header"
              }
            }
          }
        },
        "then": {
          "required": [
            "id"
          ]
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "range"
            }
          }
        },
        "then": {
          "required": [
            "min",
            "max"
          ]
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "enum": [
                "select",
                "radio"
              ]
            }
          }
        },
        "then": {
          "required": [
            "options"
          ]
        }
      }
    ]
  },
  "choice_option": {
    "type": "object",
    "properties": {
      "value": {
        "description": "The value of the option"
      },
      "label": {
        "type": "string",
        "description": "The label of the optionb"
      }
    },
    "required": [
      "value",
      "label"
    ]
  },
  "sectionData": {
    "type": "object",
    "description": "Defaults settings for the section, containing a list of key-value pairs.",
    "properties": {
      "settings": {
        "type": "object",
        "description": "Defaults settings for the section, containing a list of key-value pairs.",
        "additionalProperties": {
          "description": "A key-value pair in the settings object. Keys are strings, and values can be of any type."
        }
      },
      "blocks": {
        "type": "array",
        "description": "Defaults blocks of the section",
        "item": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Type of the block"
            },
            "settings": {
              "type": "object",
              "description": "Defaults settings for the block, containing a list of key-value pairs.",
              "additionalProperties": {
                "description": "A key-value pair in the settings object. Keys are strings, and values can be of any type."
              }
            },
            "required": ["type"]
          }
        }
      }
    }
  }
}
